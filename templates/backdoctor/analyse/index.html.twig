{% extends 'backdoctor.html.twig' %}

{% block title %}Analyse{% endblock %}

{% block body %}
    <style>
        /* Conteneur principal */
        .analyse-container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 30px;
            background: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        /* Titre */
        .analyse-header {
            text-align: center;
            font-size: 26px;
            font-weight: bold;
            color: #1A76D1;
            margin-bottom: 30px;
        }

        /* Table */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        .table th {
            background: #1A76D1;
            color: white;
            padding: 12px;
            text-align: left;
            border-radius: 5px;
        }

        .table td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        /* Espacement des boutons */
        .btn-container {
            margin-top: 20px;
            text-align: center;
        }

        .btn {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 15px;
            margin: 5px;
            display: inline-block;
        }

        .btn-primary {
            background-color: blue;
            color: white;
        }

        .btn-primary:hover {
            background-color: darkblue;
        }

        .btn-warning {
            background-color: #ffc107;
            color: black;
        }

        .btn-warning:hover {
            background-color: #d39e00;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-success:hover {
            background-color: #1e7e34;
        }

        /* Pagination personnalisÃ©e */
        .pagination {
            justify-content: center;
            margin-top: 20px;
        }

        .pagination .page-item .page-link {
            border-radius: 5px;
            color: #1A76D1;
            border: 1px solid #1A76D1;
            padding: 8px 12px;
            transition: all 0.3s ease;
        }

        .pagination .page-item.active .page-link {
            background-color: #1A76D1;
            border-color: #1A76D1;
            color: white;
        }

        .pagination .page-item .page-link:hover {
            background-color: #e6f0fa;
            color: #1A76D1;
        }

        .pagination .page-item.disabled .page-link {
            color: #aaa;
            border-color: #ddd;
            background-color: #f5f5f5;
            cursor: not-allowed;
        }

        /* Style pour la barre de recherche */
        .search-container {
            margin-bottom: 20px;
            text-align: center;
        }

        .search-container input {
            padding: 10px;
            width: 50%;
            border: 1px solid #1A76D1;
            border-radius: 5px;
            font-size: 16px;
        }
    </style>

    <div class="analyse-container">
        <div class="analyse-header">ðŸ“Š Liste des Analyses</div>

        <!-- Barre de recherche -->
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Rechercher par type, date ou diagnostic..." data-dossier-id="{{ dossierId }}">
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>DonnÃ©es</th>
                    <th>Diagnostic</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="analyseTableBody">
            {% for analyse in analyses %}
                <tr>
                    <td>{{ analyse.id }}</td>
                    <td>{{ analyse.type }}</td>
                    <td>{{ analyse.dateanalyse ? analyse.dateanalyse|date('d/m/Y') : 'Non spÃ©cifiÃ©e' }}</td>
                    <td>
                        {% if analyse.donneesAnalyse %}
                            <a href="{{ asset('uploads/' ~ analyse.donneesAnalyse) }}" target="_blank" class="btn btn-primary">ðŸ“„ AperÃ§u</a>
                        {% else %}
                            Aucun fichier
                        {% endif %}
                    </td>
                    <td>{{ analyse.diagnostic }}</td>
                    <td>
                        <a href="{{ path('app_backdoctor_analyse_show', {'id': analyse.id}) }}" class="btn btn-primary">ðŸ‘€ Afficher</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun enregistrement trouvÃ©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(analyses, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig', {}, {
                'prev_label': 'Â« PrÃ©cÃ©dent',
                'next_label': 'Suivant Â»'
            }) }}
        </div>

        <div class="btn-container">
            <a href="{{ path('app_backdoctor_dossier_medical_index') }}" class="btn btn-primary">â¬… Retour Ã  la liste</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const tableBody = document.getElementById('analyseTableBody');
            const dossierId = searchInput.getAttribute('data-dossier-id');
            let debounceTimeout;

            searchInput.addEventListener('input', function () {
                clearTimeout(debounceTimeout);
                debounceTimeout = setTimeout(() => {
                    const searchTerm = this.value.trim();

                    fetch(`/backdoctor/analyse/search/${dossierId}?q=${encodeURIComponent(searchTerm)}`, {
                        method: 'GET',
                        headers: {
                            'Accept': 'application/json',
                        },
                    })
                    .then(response => response.json())
                    .then(data => {
                        tableBody.innerHTML = ''; // Vider le tableau

                        if (data.length === 0) {
                            tableBody.innerHTML = '<tr><td colspan="6">Aucun enregistrement trouvÃ©</td></tr>';
                            return;
                        }

                        data.forEach(analyse => {
                            const row = `
                                <tr>
                                    <td>${analyse.id}</td>
                                    <td>${analyse.type}</td>
                                    <td>${analyse.dateanalyse}</td>
                                    <td>
                                        ${analyse.donneesAnalyse 
                                            ? `<a href="/uploads/${analyse.donneesAnalyse}" target="_blank" class="btn btn-primary">ðŸ“„ AperÃ§u</a>` 
                                            : 'Aucun fichier'}
                                    </td>
                                    <td>${analyse.diagnostic}</td>
                                    <td>
                                        <a href="/backdoctor/analyse/show/${analyse.id}" class="btn btn-primary">ðŸ‘€ Afficher</a>
                                    </td>
                                </tr>
                            `;
                            tableBody.innerHTML += row;
                        });
                    })
                    .catch(error => {
                        console.error('Erreur lors de la recherche:', error);
                        tableBody.innerHTML = '<tr><td colspan="6">Erreur lors de la recherche</td></tr>';
                    });
                }, 300); // DÃ©lai de 300ms pour le debouncing
            });
        });
    </script>
{% endblock %}
