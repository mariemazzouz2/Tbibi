{% extends 'base.html.twig' %}

{% block title %}Exam index{% endblock %}

{% block body %}
    <h1>Exam index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Dateexam</th>
                <th>Diagnostic</th>
                <th>Data</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exam in exams %}
            <tr>
                <td>{{ exam.id }}</td>
                <td>{{ exam.type }}</td>
                <td>{{ exam.dateexam ? exam.dateexam|date('Y-m-d') : '' }}</td>
                <td>{{ exam.diagnostic }}</td>
                <td>{{ exam.data ? exam.data|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_exam_show', {'id': exam.id}) }}">show</a>
                    <a href="{{ path('app_exam_edit', {'id': exam.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_exam_new') }}">Create new</a>
{% endblock %}
