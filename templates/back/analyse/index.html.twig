    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const tableBody = document.getElementById('analyseTableBody');
            const dossierId = searchInput.getAttribute('data-dossier-id');
            let debounceTimeout;

            searchInput.addEventListener('input', function () {
                clearTimeout(debounceTimeout);
                debounceTimeout = setTimeout(() => {
                    const searchTerm = this.value.trim();

                    fetch(`/back/analyse/search/${dossierId}?q=${encodeURIComponent(searchTerm)}`, {
                        method: 'GET',
                        headers: {
                            'Accept': 'application/json',
                        },
                    })
                    .then(response => response.json())
                    .then(data => {
                        tableBody.innerHTML = ''; // Vider le tableau

                        if (data.length === 0) {
                            tableBody.innerHTML = '<tr><td colspan="6">Aucun enregistrement trouv√©</td></tr>';
                            return;
                        }

                        data.forEach(analyse => {
                            const row = `
                                <tr>
                                    <td>${analyse.id}</td>
                                    <td>${analyse.type}</td>
                                    <td>${analyse.dateanalyse}</td>
                                    <td>
                                        ${analyse.donneesAnalyse 
                                            ? `<a href="/uploads/${analyse.donneesAnalyse}" target="_blank" class="btn btn-primary">üìÑ Aper√ßu</a>` 
                                            : 'Aucun fichier'}
                                    </td>
                                    <td>${analyse.diagnostic}</td>
                                    <td>
                                        <a href="/back/analyse/show/${analyse.id}" class="btn btn-primary">üëÄ Afficher</a>
                                        <a href="/back/analyse/${analyse.id}/edit" class="btn btn-warning">‚úèÔ∏è Modifier</a>
                                    </td>
                                </tr>
                            `;
                            tableBody.innerHTML += row;
                        });
                    })
                    .catch(error => {
                        console.error('Erreur lors de la recherche:', error);
                        tableBody.innerHTML = '<tr><td colspan="6">Erreur lors de la recherche</td></tr>';
                    });
                }, 300); // D√©lai de 300ms pour le debouncing
            });
        });
    </script>
