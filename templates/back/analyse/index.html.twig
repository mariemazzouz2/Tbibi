{% extends 'back.html.twig' %}

{% block title %}Analyse index{% endblock %}

{% block body %}
    <h1>Analyse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Dateanalyse</th>
                <th>Données_Analyse</th>
                <th>Diagnostic</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for analyse in analyses %}
            <tr>
                <td>{{ analyse.id }}</td>
                <td>{{ analyse.type }}</td>
                <td>{{ analyse.dateanalyse ? analyse.dateanalyse|date('Y-m-d') : '' }}</td>
                <td>{{ analyse.donnéesAnalyse ? analyse.donnéesAnalyse|join(', ') : '' }}</td>
                <td>{{ analyse.diagnostic }}</td>
                <td>
                    <a href="{{ path('app_analyse_show', {'id': analyse.id}) }}">show</a>
                    <a href="{{ path('app_analyse_edit', {'id': analyse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_analyse_new') }}">Create new</a>
{% endblock %}
