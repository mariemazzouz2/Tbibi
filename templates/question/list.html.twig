{% extends 'base.html.twig' %}



{% block title %}
	Questions
{% endblock %}

{% block body %}
	<div
		class="container mt-4">

		<!-- Barre de recherche -->
		<div class="input-group mb-4">
			<input type="text" class="form-control mr-2" placeholder="Rechercher une question..." aria-label="Rechercher">
			<button class="btn btn-primary mr-2" type="button">üîç</button>
            <a href="{{path ('app_question_add')}}" class="btn btn-success mr-2">Poser une question</a>
		</div>

	<div class="list-group">
    {% for question in questions %}
        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1">{{ question.titre }}</h5>
                <p class="mb-1">{{ question.contenu|slice(0, 100) ~ '...' }}</p>

                <!-- Affichage des r√©ponses -->
                {% if question.reponses is not empty %}
                    <div class="mt-2 p-2 border-top">
                        <strong>R√©ponses :</strong>
                        {% for reponse in question.reponses %}
                            <p class="text-muted">{{ reponse.contenu }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <!-- Bouton de suppression sans CSRF -->
            <a href="{{ path('app_question_delete', { 'id': question.id }) }}" 
               class="btn btn-danger" 
               onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette question ?');">
                üóë Supprimer
            </a>
        </div>
    {% else %}
        <p>Aucune question disponible.</p>
    {% endfor %}
</div>


		

		<!-- Bouton pour poser une question -->

	</div>
{% endblock %}
