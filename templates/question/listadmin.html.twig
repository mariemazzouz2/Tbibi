{% extends 'back.html.twig' %}

{% block content %}

    <div class="container mt-4">
        <h1 class="mb-4" style="color: #0056b3;">Liste des Questions (Administration)</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Contenu</th>
                    <th scope="col">Date</th>
                    <th scope="col">R√©ponses</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for question in questions %}
                    <tr>
                        <th scope="row">{{ question.id }}</th>
                        <td>{{ question.titre }}</td>
                        <td>{{ question.contenu|slice(0, 50) ~ '...' }}</td>
                        <td>{{ question.getDateCreation() | date('D/M/Y') }}</td>
                        <td>
                            <a href="{{ path('view_reponses', {id: question.id}) }}" class="btn btn-info btn-sm">Voir les r√©ponses</a>
                        </td>
                        <td>
                            <div style="display: flex; gap: 5px;">
                                <a href="{{ path('app_question_edit', {id: question.id}) }}" class="btn btn-success btn-sm">‚úèÔ∏è Modifier</a>
                                <a href="{{ path('app_question_delete_admin', {id: question.id}) }}" 
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette question ?');">üóë Supprimer</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucune question disponible.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}