{% extends 'base.html.twig' %}

{% block title %}Poser une Question{% endblock %}

{% block body %}
<div class="container mt-5" style="width: 700px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); border-radius: 12px;">
    <div class="card shadow-lg p-5 rounded"style="border-radius:12px">
        <h2 class="text-center mb-4">Ajouter une Question</h2>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'needs-validation', 'novalidate': 'novalidate', 'data-turbo': 'false'}}) }}

        <div class="mb-4">
            <label for="{{ form.titre.vars.id }}" class="form-label">Titre de la question</label>
            {{ form_widget(form.titre, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Ex: Quelle est la durée de guérison d’une entorse ?',
                    'style': 'border-radius: 10px; border: 1px solid #ddd;'
                }
            }) }}
            {{ form_errors(form.titre) }}
        </div>

        <div class="mb-4">
            <label for="{{ form.contenu.vars.id }}" class="form-label">Description détaillée</label>
            {{ form_widget(form.contenu, {
                'attr': {
                    'class': 'form-control',
                    'rows': '5',
                    'placeholder': 'Décrivez votre question en détail...',
                    'style': 'border-radius: 10px; border: 1px solid #ddd;'
                }
            }) }}
            {{ form_errors(form.contenu) }}
        </div>

        <div class="mb-4">
            <label for="{{ form.specialite.vars.id }}" class="form-label"></label>
            {{ form_widget(form.specialite, {
                'attr': {
                    'class': 'form-select selectpicker',
                    'data-live-search': 'true',
                    'style': 'border-radius: 10px; border: 1px solid #ddd;'
                }
            }) }}
            {{ form_errors(form.specialite) }}
        </div>

        <div class="mb-4 form-check">
            {{ form_widget(form.visible, {
                'attr': {
                    'style': 'margin-left: -230px;margin-top: 15px;'
                }
            }) }}
            <label for="{{ form.visible.vars.id }}" class="form-check-label" style="font-size: 1.1rem;margin-left: -230px;margin-top: 10px;">Rendre la question visible</label>
            {{ form_errors(form.visible) }}
        </div>

        <div class="mb-4">
            <label for="{{ form.image.vars.id }}" class="form-label">Image (optionnel)</label>
            {{ form_widget(form.image, {
                'attr': {
                    'class': 'form-control',
                    'onchange': 'previewImage(event)',
                    'style': 'border-radius: 10px; border: 1px solid #ddd;'
                }
            }) }}
            {{ form_errors(form.image) }}
            <div class="mt-3">
                <img id="imagePreview" class="d-none rounded" style="max-width: 100%; height: auto; border-radius: 10px;">
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary" style="border-radius: 10px; padding: 10px 20px;">
                <i class="fas fa-paper-plane"></i> Publier
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<script>
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function () {
            const preview = document.getElementById('imagePreview');
            preview.src = reader.result;
            preview.classList.remove('d-none');
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
    <style>
        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #ddd;
        }
        
        .form-label {
            font-weight: bold;
            font-size: 1.1rem;
        }
        
        .btn-primary {
            border-radius: 10px;
            padding: 10px 20px;
        }
        
        .form-check-label {
            font-size: 1.1rem;
        }
        
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .mb-4 {
            margin-bottom: 1.5rem;
        }
        
        #imagePreview {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }
    </style>



{% endblock %}
