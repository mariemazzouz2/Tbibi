{% block styles %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Ajouter un Patient</h1>
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.nom) }}</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.prenom, {'attr': {'class': 'form-control' ~ (form.prenom.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.prenom) }}</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.email) }}</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.password, {'attr': {'class': 'form-control' ~ (form.password.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.password) }}</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.telephone, {'attr': {'class': 'form-control' ~ (form.telephone.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.telephone) }}</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.adresse, {'attr': {'class': 'form-control' ~ (form.adresse.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.adresse) }}</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.dateNaissance, {'attr': {'class': 'form-control' ~ (form.dateNaissance.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.dateNaissance) }}</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.sexe, {'attr': {'class': 'form-control' ~ (form.sexe.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.sexe) }}</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.image, {'attr': {'class': 'form-control' ~ (form.image.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.image) }}</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        {{ form_row(form.taille, {'attr': {'class': 'form-control' ~ (form.taille.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.taille) }}</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        {{ form_row(form.poids, {'attr': {'class': 'form-control' ~ (form.poids.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback text-danger">{{ form_errors(form.poids) }}</div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Ajouter</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
