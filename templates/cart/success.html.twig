{% extends 'base.html.twig' %}

{% block title %}Commande confirmée{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center">
        <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
        </div>
        
        <h1 class="mb-4">Merci pour votre commande!</h1>
        
        <p class="lead mb-5">
            Votre commande #{{ commande.id }} a été confirmée et est en cours de traitement.
            Vous recevrez bientôt un email avec les détails de votre commande.
        </p>
        
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Résumé de votre commande</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted">Numéro de commande:</div>
                            <div class="col-sm-8">{{ commande.id }}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted">Date de commande:</div>
                            <div class="col-sm-8">{{ commande.dateCommande|date('d/m/Y') }}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted">Total:</div>
                            <div class="col-sm-8">{{ commande.montantTotal }} TND</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted">Statut:</div>
                            <div class="col-sm-8">
                                <span class="badge bg-primary">{{ commande.statut }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            <a href="{{ path('app_facture_show', {'id': commande.id}) }}" class="btn btn-primary btn-lg mx-2">
                <i class="fas fa-file-invoice"></i> Voir la facture
            </a>
            <a href="{{ path('app_produit_index') }}" class="btn btn-outline-secondary btn-lg mx-2">
                <i class="fas fa-shopping-bag"></i> Continuer mes achats
            </a>
        </div>
    </div>
</div>
{% endblock %}