{% block title %}Liste des Produits{% endblock %}
{% include '_cart_widget.html.twig' %}
{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #eafaf1;
            margin: 0;
            padding: 20px;
        }

        .card {
            max-width: 600px;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: #ffcc00;
            padding: 15px;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .product-info {
            margin-bottom: 10px;
        }

        .image-preview {
            display: flex;
            justify-content: center;
            margin-bottom: 15px;
        }

        .image-preview img {
            max-width: 100px;
            border-radius: 5px;
            border: 1px solid #ddd;
            background: white;
            padding: 5px;
        }
        
        .btn {
            display: inline-block;
            padding: 8px 15px;
            background: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-right: 10px;
            border: none;
            cursor: pointer;
        }
        
        .btn-secondary {
            background: #6c757d;
        }
        
        .cart-info {
            position: fixed;
            top: 20px;
            right: 20px;
            background: white;
            padding: 10px 15px;
            border-radius: 5px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }
        
        .badge {
            display: inline-block;
            padding: 3px 7px;
            background: #dc3545;
            color: white;
            border-radius: 50%;
            font-size: 12px;
        }
        
        .flash-messages {
            position: fixed;
            top: 70px;
            right: 20px;
            z-index: 1001;
            max-width: 300px;
        }
        
        .alert {
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        
        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .product-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }
        
        .quantity-input {
            width: 60px;
            text-align: center;
            margin-right: 10px;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
    </style>
    
  
    
    <div class="flash-messages">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>

    {% for produit in produits %}
        <div class="card">
        
            <div class="card-header">{{ produit.nom }}</div>
            <div class="image-preview">
                {% if produit.image %}
                    <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="Image du produit">
                {% else %}
                    <p>Aucune image disponible</p>
                {% endif %}
            </div>
            <div class="product-info">
                <strong>Prix :</strong> {{ produit.prix }} TND
            </div>

            <div class="product-info">
                <strong>Type :</strong> {{ produit.type }}
            </div>

            <div class="product-info">
                <strong>Description :</strong> {{ produit.description }}
            </div>

            <div class="product-actions">
                <form action="{{ path('app_cart_add', {'id': produit.id}) }}" method="post" class="form-inline">
                    <input type="number" name="quantity" value="1" min="1" class="quantity-input">
                    <button type="submit" class="btn">Ajouter au panier</button>
                </form>
                <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-secondary">DÃ©tails</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
