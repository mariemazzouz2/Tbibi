{% extends 'base.html.twig' %}

{% block title %}Détails du Produit{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card shadow-lg" style="width: 30rem;">
            {% if produit.image %}
                <img src="{{ asset('uploads/' ~ produit.image) }}" class="card-img-top" alt="{{ produit.nom }}">
            {% else %}
                <img src="{{ asset('images/default.png') }}" class="card-img-top" alt="Image par défaut">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title">{{ produit.nom }}</h5>
                <p class="card-text"><strong>Prix :</strong> {{ produit.prix }} TND</p>
                <p class="card-text"><strong>Type :</strong> {{ produit.type }}</p>
                <p class="card-text"><strong>Description :</strong> {{ produit.description }}</p>
                
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Retour</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
