{% extends 'back.html.twig' %}

{% block title %}Nouvelle Catégorie{% endblock %}


{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <h1>
                            <i class="fas fa-plus-circle"></i> Ajouter une Catégorie
                        </h1>

                        {{ form_start(form) }}
                        
                            <div class="form-group">
                                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': form.nom.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'}}) }}
                                {% if form.nom.vars.errors|length > 0 %}
                                    <div class="invalid-feedback">
                                        {% for error in form.nom.vars.errors %}
                                            <p>{{ error.message }}</p>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': form.description.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control description-textarea'}}) }}
                                {% if form.description.vars.errors|length > 0 %}
                                    <div class="invalid-feedback">
                                        {% for error in form.description.vars.errors %}
                                            <p>{{ error.message }}</p>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                            </div>
                        {{ form_end(form) }}

                        <div class="text-center mt-4">
                            <a href="{{ path('app_categorie_ev_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


