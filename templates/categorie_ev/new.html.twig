{% extends 'back.html.twig' %}

{% block title %}Nouvelle Catégorie{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles pour le conteneur principal */
        .container-fluid {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            min-height: 100vh;
            padding: 20px;
        }

        /* Styles pour la carte */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }

        /* Styles pour le titre */
        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 40px;
        }

        .card-body h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: #34495e; /* Couleur de texte plus douce */
            margin-bottom: 1.5rem;
        }

        /* Styles pour le bouton de retour */
        .btn-secondary {
            background-color: #6c757d; /* Gris bleuté */
            border-color: #6c757d;
            padding: 0.5rem 1.5rem;
            font-size: 0.9rem;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #5a6268; /* Gris bleuté plus foncé au survol */
            border-color: #545b62;
        }

        /* Styles pour le formulaire */
        .form-group {
            margin-bottom: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-control,
        .description-textarea {
            width: 80%; /* Définir une largeur fixe pour tous les champs */
            max-width: 600px; /* Optionnel : Limite la largeur maximale */
            border-radius: 15px; /* Coins arrondis avec 15px de rayon */
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            text-align: center; /* Centrer le texte dans les champs */
        }

        .description-textarea {
            min-height: 50px; /* Hauteur de la zone de description, égale à celle des autres champs */
            resize: none; /* Empêche le redimensionnement */
        }

        /* Styles pour les icônes */
        .fas {
            margin-right: 0.5rem;
            color: #4e73df; /* Bleu vif pour les icônes */
        }

        /* Styles pour les labels */
        label {
            font-weight: 500;
            color: #2c3e50; /* Couleur de texte plus foncée */
            margin-bottom: 0.5rem;
        }

        /* Styles pour le bouton de soumission du formulaire */
        .btn-primary {
            background-color: #4e73df; /* Bleu vif */
            border-color: #4e73df;
            padding: 0.75rem 1.5rem;
            font-size: 0.9rem;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #224abe; /* Bleu plus foncé au survol */
            border-color: #224abe;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <h1>
                            <i class="fas fa-plus-circle"></i> Ajouter une Catégorie
                        </h1>

                        {{ form_start(form) }}
                        
                            <div class="form-group">
                                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': form.nom.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'}}) }}
                                {% if form.nom.vars.errors|length > 0 %}
                                    <div class="invalid-feedback">
                                        {% for error in form.nom.vars.errors %}
                                            <p>{{ error.message }}</p>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': form.description.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control description-textarea'}}) }}
                                {% if form.description.vars.errors|length > 0 %}
                                    <div class="invalid-feedback">
                                        {% for error in form.description.vars.errors %}
                                            <p>{{ error.message }}</p>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                            </div>
                        {{ form_end(form) }}

                        <div class="text-center mt-4">
                            <a href="{{ path('app_categorie_ev_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


