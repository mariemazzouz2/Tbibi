{% extends 'back.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <h1 class="text-center">
                            <i class="fas fa-tags"></i> Détails de la Catégorie
                        </h1>

                        {# Tableau des détails de la catégorie #}
                        <table class="table table-bordered table-hover">
                            <tbody>
                                <tr>
                                    <th class="bg-light">ID</th>
                                    <td>{{ categorie_ev.id }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Nom</th>
                                    <td>{{ categorie_ev.nom }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Description</th>
                                    <td>{{ categorie_ev.description }}</td>
                                </tr>
                            </tbody>
                        </table>

                        {# Boutons d'action avec icônes #}
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_categorie_ev_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                            <a href="{{ path('app_categorie_ev_edit', {'id': categorie_ev.id}) }}" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <form method="post" action="{{ path('app_categorie_ev_delete', {'id': categorie_ev.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie_ev.id) }}">
                                <button class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}