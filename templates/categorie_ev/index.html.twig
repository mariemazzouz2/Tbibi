{% extends 'back.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block stylesheets %}
    <style>
        .container-fluid {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            background: #ffffff;
            padding: 20px;
        }

        h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: #34495e;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .table {
            width: 100%;
            color: #2c3e50;
            border-collapse: collapse;
        }

        .table th,
        .table td {
            padding: 12px;
            text-align: center;
            border-top: 1px solid #e3e6f0;
        }

        .table th {
            background-color: #f8f9fc;
            color: #4e73df;
            font-weight: 600;
        }

        .table tbody tr:hover {
            background-color: #f8f9fc;
        }

        /* Conteneur des boutons d'action */
        .btn-container {
            display: flex;
            justify-content: center;
            gap: 10px; /* Espacement uniforme entre les boutons */
        }

        .btn {
            border-radius: 8px;
            padding: 8px 15px;
            font-size: 0.9rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s ease, transform 0.2s ease;
            width: 120px;
        }

        .btn i {
            margin-right: 8px;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            color: white;
        }

        .btn-primary:hover {
            background-color: #224abe;
            transform: scale(1.05);
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

        .btn-danger {
            background-color: #e74a3b;
            border-color: #e74a3b;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

        .text-center {
            text-align: center;
        }

        /* Ajout d'espace sous le tableau */
        .table-container {
            margin-bottom: 30px;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body">
                        <h1>
                            <i class="fas fa-list"></i> Liste des Catégories
                        </h1>

                        <div class="table-container">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Description</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for categorie_ev in categorie_evs %}
                                        <tr>
                                            <td>{{ categorie_ev.id }}</td>
                                            <td>{{ categorie_ev.nom }}</td>
                                            <td>{{ categorie_ev.description }}</td>
                                            <td>
                                                <div class="btn-container">
                                                    <a href="{{ path('app_categorie_ev_show', {'id': categorie_ev.id}) }}" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-eye"></i> Voir
                                                    </a>
                                                    <a href="{{ path('app_categorie_ev_edit', {'id': categorie_ev.id}) }}" class="btn btn-secondary btn-sm">
                                                        <i class="fas fa-pen"></i> Modifier
                                                    </a>
                                                    <form action="{{ path('app_categorie_ev_delete', {'id': categorie_ev.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="fas fa-trash"></i> Supprimer
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center">Aucun enregistrement trouvé</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="text-center">
                            <a href="{{ path('app_categorie_ev_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Nouvelle Catégorie
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
