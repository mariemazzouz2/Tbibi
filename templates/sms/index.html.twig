{% block styles %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Envoyer un SMS</h1>
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" action="{{ path('send_sms') }}" class="needs-validation" novalidate>
                    
                    <div class="mb-3">
                        <label for="number" class="form-label">Numéro de téléphone :</label>
                        <input type="text" name="number" id="number" class="form-control" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom de l'expéditeur :</label>
                        <input type="text" name="name" id="name" class="form-control" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="text" class="form-label">Message :</label>
                        <textarea name="text" id="text" class="form-control" rows="4" required></textarea>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Envoyer le SMS</button>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
    <a href="{{ path('back') }}" class="btn btn-secondary">Retour</a>
</div>
                </form>
            </div>
        </div>
        
        {% if smsSent %}
            <div class="alert alert-success mt-3 text-center">Le SMS a été envoyé avec succès.</div>
        {% endif %}
    </div>
{% endblock %}
