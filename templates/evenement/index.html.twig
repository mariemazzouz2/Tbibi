{% extends 'base.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/event.css') }}">
    <style>
        /* Styles pour le conteneur principal */
        .container-fluid {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            min-height: 100vh;
            padding: 20px;
        }

        /* Styles pour le titre */
        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #ffffff;
            text-align: center;
            margin-bottom: 2rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        /* Styles pour le message "Aucun événement trouvé" */
        .no-events {
            text-align: center;
            font-size: 1.2rem;
            color: #ffffff;
            margin-top: 2rem;
        }

        /* Styles pour la grille des événements */
        .events-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        /* Styles pour la carte d'événement */
        .event-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        /* Styles pour l'image de l'événement */
        .event-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        /* Styles pour le contenu de l'événement */
        .event-content {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .event-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        .event-description {
            font-size: 1rem;
            color: #7f8c8d;
            margin-bottom: 1.5rem;
        }

        .event-details p {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 0.5rem;
        }

        .event-details strong {
            color: #2c3e50;
        }

        /* Styles pour le statut de l'événement */
        .event-status {
            font-weight: 600;
            color: #e74c3c;
        }

        /* Styles pour les boutons */
        .event-actions {
            margin-top: auto;
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .btn-view-details, .btn-edit {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
            flex: 1;
            font-weight: 600;
            font-size: 0.9rem;
            border: none;
            cursor: pointer;
        }

        .btn-view-details {
            background-color: #3498db;  /* Bleu santé */
            color: #ffffff;
        }

        .btn-view-details:hover {
            background-color: #2980b9;  /* Bleu plus foncé */
            transform: scale(1.05);
        }

        .btn-edit {
            background-color: #bdc3c7;  /* Gris clair */
            color: #ffffff;
        }

        .btn-edit:hover {
            background-color: #95a5a6;  /* Gris plus foncé */
            transform: scale(1.05);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Liste des Événements</h1>

        {% if evenements is empty %}
            <p class="no-events">Aucun événement trouvé.</p>
        {% else %}
            <div class="events-grid">
                {% for evenement in evenements %}
                    <div class="event-card">
                        <div class="event-image">
                            {% if evenement.image %}
                                <img src="{{ asset('uploads/' ~ evenement.image) }}" alt="{{ evenement.titre }}">
                            {% else %}
                                <img src="{{ asset('uploads/67b38b8547e7b2.58499614.png') }}" alt="Image par défaut">
                            {% endif %}
                        </div>
                        <div class="event-content">
                            <h2 class="event-title">{{ evenement.titre }}</h2>
                            <p class="event-description">{{ evenement.description }}</p>
                            <div class="event-details">
                                <p><strong>Date de début :</strong> {{ evenement.dateDebut|date('d/m/Y') }}</p>
                                <p><strong>Date de fin :</strong> {{ evenement.dateFin|date('d/m/Y') }}</p>
                                <p><strong>Lieu :</strong> {{ evenement.lieu }}</p>
                                <p><strong>Statut :</strong> <span class="event-status">{{ evenement.statut.value }}</span></p>
                            </div>
                            <div class="event-actions">
                                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn-view-details">Voir les détails</a>
                                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn-edit">S'inscrire</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
