{% extends 'back.html.twig' %}

{% block title %}Modifier l'Événement{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Arrière-plan avec un dégradé léger */
        body {
            background: linear-gradient(135deg, #6a11cb, #2575fc); /* Dégradé bleu et violet */
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Carte du formulaire */
        .form-container {
            max-width: 550px;
            margin: 50px auto;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        /* Titre */
        .form-title {
            color: #2575fc; /* Bleu vif */
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Formulaire */
        form {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-group {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
            transition: all 0.3s ease;
            width: 80%;
        }

        .form-control:focus {
            border-color: #2575fc;
            box-shadow: 0 0 5px rgba(37, 117, 252, 0.5);
        }

        .form-label {
            color: #6c757d;
            width: 80%;
            text-align: left;
        }

        /* Zone de description */
        .description-textarea {
            min-height: 120px;
            resize: vertical;
        }

        /* Boutons */
        .btn-primary {
            background: #2575fc;
            border: none;
            border-radius: 8px;
            padding: 12px;
            transition: all 0.3s ease;
            width: 80%;
        }

        .btn-primary:hover {
            background: #0056b3;
        }

        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
            border-radius: 8px;
            padding: 10px 20px;
        }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }

        /* Centrage des boutons */
        .button-container {
            display: flex;
            justify-content: space-between;
            width: 80%;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}


{% block content %}
    <div class="container">
        <div class="card shadow p-4 bg-white rounded form-container">
            <div class="card-body">
                <h1 class="h4 mb-4 text-center form-title">
                    <i class="fas fa-edit"></i> Modifier l'Événement
                </h1>

                {# Formulaire de modification #}
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    {{ form_errors(form) }}

                    {% for field in form %}
                        <div class="form-group mb-3">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(field, {
                                'attr': {
                                    'class': field.vars.name == 'description' ? 'form-control description-textarea' : 'form-control'
                                }
                            }) }}
                            {{ form_errors(field) }}
                        </div>
                    {% endfor %}

                    <button class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
                {{ form_end(form) }}

                {# Boutons d'action #}
                <div class="button-container">
                    <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    {{ include('evenement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
{% endblock %}

