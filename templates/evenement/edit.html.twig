{% extends 'back.html.twig' %}

{% block title %}Modifier l'Événement{% endblock %}



{% block content %}
    <div class="container">
        <div class="card shadow p-4 bg-white rounded form-container">
            <div class="card-body">
                <h1 class="h4 mb-4 text-center form-title">
                    <i class="fas fa-edit"></i> Modifier l'Événement
                </h1>

                {# Formulaire de modification #}
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    {{ form_errors(form) }}

                    {% for field in form %}
                        <div class="form-group mb-3">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(field, {
                                'attr': {
                                    'class': field.vars.name == 'description' ? 'form-control description-textarea' : 'form-control'
                                }
                            }) }}
                            {{ form_errors(field) }}
                        </div>
                    {% endfor %}

                    <button class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
                {{ form_end(form) }}

                {# Boutons d'action #}
                <div class="button-container">
                    <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    {{ include('evenement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
