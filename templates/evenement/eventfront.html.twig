{% extends 'base_front.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .event-card {
            margin-bottom: 30px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        .event-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }
        .event-details {
            padding: 20px;
        }
        .btn-custom {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        .btn-details {
            background-color: #4e73df;
            color: white;
        }
        .btn-details:hover {
            background-color: #2e59d9;
            color: white;
            transform: translateY(-2px);
        }
        .btn-map {
            background-color: #1cc88a;
            color: white;
        }
        .btn-map:hover {
            background-color: #169b6b;
            color: white;
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-5">Événements</h1>
        <div class="row">
            {% for evenement in evenements %}
                <div class="col-md-4 mb-4">
                    <div class="event-card">
                        {% if evenement.image %}
                            <img src="{{ asset('uploads/' ~ evenement.image) }}" class="event-image" alt="{{ evenement.titre }}">
                        {% endif %}
                        <div class="event-details">
                            <h5>{{ evenement.titre }}</h5>
                            <p>
                                <i class="fas fa-calendar-alt"></i> 
                                {{ evenement.dateDebut|date('d/m/Y') }}
                            </p>
                            <p>
                                <i class="fas fa-map-marker-alt"></i> 
                                {{ evenement.lieu }}
                            </p>
                            <div class="d-flex justify-content-between mt-3">
                                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" 
                                   class="btn-custom btn-details">
                                    <i class="fas fa-info-circle"></i> Détails
                                </a>
                                <button onclick="showMap({{ evenement.latitude|default(36.8065) }}, {{ evenement.longitude|default(10.1815) }}, '{{ evenement.titre|e('js') }}', '{{ evenement.lieu|e('js') }}')" 
                                        class="btn-custom btn-map">
                                    <i class="fas fa-map-marker-alt"></i> Carte
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Modal pour la carte -->
    <div class="modal fade" id="mapModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Localisation de l'événement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="eventMap" style="height: 400px;"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        let map;
        let marker;

        function showMap(lat, lng, title, address) {
            if (!map) {
                map = L.map('eventMap');
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '© OpenStreetMap contributors'
                }).addTo(map);
            }

            map.setView([lat, lng], 15);

            if (marker) {
                map.removeLayer(marker);
            }

            marker = L.marker([lat, lng]).addTo(map)
                .bindPopup(`<b>${title}</b><br>${address}`).openPopup();

            const modal = new bootstrap.Modal(document.getElementById('mapModal'));
            modal.show();

            document.getElementById('mapModal').addEventListener('shown.bs.modal', function () {
                map.invalidateSize();
            });
        }
    </script>
{% endblock %}