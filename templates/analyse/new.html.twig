{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="display: flex; justify-content: center; align-items: center; height: 100vh; padding: 20px;">
        <div class="form-container" style="width: 600px; padding: 30px; background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);">
            {{ form_start(form) }}

            {# Affichage des erreurs globaux du formulaire #}
            {% if form_errors(form) %}
                <div class="alert alert-danger">
                    <ul>
                        {% for error in form_errors(form) %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {# Champ Type d'analyse #}
            <div class="form-group">
                {{ form_label(form.type, 'Type d\'analyse') }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.type) }}
            </div>

            {# Champ Date d'analyse #}
            <div class="form-group">
                {{ form_label(form.dateanalyse, 'Date d\'analyse') }}
                {{ form_widget(form.dateanalyse, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateanalyse) }}
            </div>

            {# Champ Données de l'analyse #}
            <div class="form-group">
                {{ form_label(form.donnees_Analyse, 'Données de l\'analyse') }}
                {{ form_widget(form.donnees_Analyse, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.donnees_Analyse) }}
            </div>

            {# Champ Diagnostic #}
            <div class="form-group">
                {{ form_label(form.diagnostic, 'Diagnostic') }}
                {{ form_widget(form.diagnostic, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.diagnostic) }}
            </div>

            {# Champ Dossier Médical #}
            <div class="form-group">
                {{ form_label(form.dossier, 'Dossier Médical') }}
                {{ form_widget(form.dossier, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dossier) }}
            </div>

            <button class="btn btn-primary" style="width: 100%; padding: 12px; font-size: 18px; border-radius: 6px; margin-top: 20px;">
                {{ button_label|default('Enregistrer') }}
            </button>
            
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
